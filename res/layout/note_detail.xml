<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView
        android:id="@+id/noteTitleET"
        android:layout_marginLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/create_note_styling"
        android:textSize="32sp"
         />

    <TextView
        android:id="@+id/txtTime"
        android:layout_marginLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteTitleET"
         />

    <View 
        android:id="@+id/hr"
        android:layout_marginTop="5dp"
   	    android:layout_width="fill_parent"
        android:layout_height="2dp" 
        android:layout_below="@+id/txtTime"      
        android:background="#000"/>
   
    
    <TextView
        android:id="@+id/cateChoice"
        android:layout_marginLeft="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr"
        android:text="Category: None Selected"
        android:textColor="#C35817"
         />
    
   
     <View 
        android:id="@+id/hr3"
        android:layout_marginTop="5dp"
   	    android:layout_width="fill_parent"
        android:layout_height="2dp" 
        android:layout_below="@+id/cateChoice"      
        android:background="#000"/>
    
    
     <TextView
         android:id="@+id/contentTxt"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_below="@+id/hr3"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
         android:background="@drawable/create_note_styling"
         android:gravity="top"
         android:layout_above="@+id/imageView1"
         android:hint="Content"
         android:inputType="textMultiLine" />
     
     <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hr2" 
        android:layout_centerInParent="true"/> 
     
      <View 
        android:id="@+id/hr2"
        android:layout_marginTop="5dp"
   	    android:layout_width="fill_parent"
        android:layout_height="2dp" 
        android:layout_above="@+id/btnSave"     
        android:background="#000"/>
     
    <ScrollView
	         	android:id="@+id/sv"
	         	android:layout_below="@+id/noteContent"
	         	android:layout_width="fill_parent"
	         	android:layout_height="fill_parent">
	     
	         <FrameLayout android:layout_width="match_parent"
    			android:layout_height="wrap_content">
	         
	         
	         
		         <LinearLayout
		             android:id="@+id/lLA"
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		             android:orientation="vertical"
		             >  
		                  
		             <TextView 
		                 android:id="@+id/hrTv"
		                 android:layout_width="fill_parent"
		        		 android:layout_height="2dp"     
		   			     android:background="#000"/>
		                 
		             
		          	 <TextView
			             android:id="@+id/attachment"  
			             android:layout_height="wrap_content"
			             android:layout_width="fill_parent"
			             android:layout_marginTop="5dp"
			             android:text="@string/attachment"
		               />
		           
		           	 <TextView
			             android:id="@+id/imageUriTv"
			             android:layout_height="wrap_content"
			             android:layout_width="fill_parent" 
			             android:layout_marginTop="5dp"/>
	   
				     <ImageView 
				         android:id="@+id/imgView"
				         android:layout_width="fill_parent"
				         android:layout_height="200dp"
				         android:layout_marginTop="5dp"
				         android:layout_marginLeft="10dp"
				         android:layout_marginRight="10dp"
						/> 

				     <TextView
		                 android:id="@+id/videoUriTv"
		                 android:layout_height="wrap_content"
		                 android:layout_width="fill_parent"
		                 android:layout_marginTop="5dp"/>
				     
				     <VideoView 
				         android:id="@+id/videoView"
				         android:layout_width="fill_parent"
				         android:layout_height="200dp" 
				         android:layout_marginTop="5dp"
				         android:layout_marginLeft="10dp"
				         android:layout_marginRight="10dp"
						 android:layout_gravity="center"/>
				 	     
				     <TextView
				         android:id="@+id/audioUriTv"
		                 android:layout_height="wrap_content"
		                 android:layout_width="fill_parent"
		                 android:layout_marginTop="5dp"/>		         
				         
				     <VideoView 
				         android:id="@+id/audioView"
				         android:layout_marginTop="5dp"
				         android:layout_width="100dp"
				         android:layout_height="100dp"
				         android:layout_gravity="center"
				         android:background="@drawable/audio"
       					 />

				     <TextView
						 android:layout_width="fill_parent"
				         android:layout_height="wrap_content"
				         />
		    	 </LinearLayout>
	         </FrameLayout>
	     </ScrollView> 

</LinearLayout>
